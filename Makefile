#################################################################################################################
#                                           VARIABLES SET                                                       #
#################################################################################################################
NAME = philo

CC = gcc
FLAGS = -Wall -Wextra -Werror -g #-fsanitize=thread

SRCS = main.c init_struct.c
	

SRCS_BONUS =

INCLUDES = philo.h

OBJS = ${addprefix ${OBJ_DIR}/,${SRCS:.c=.o}}
OBJ_DIR = objets/
#################################################################################################################
#                                           RULES COMPILATION                                                   #
#################################################################################################################
all: ${NAME}

${NAME}: ${OBJS}
	${CC} ${FLAGS} ${OBJS} ${EXTRA} -I ${INCLUDES} -o ${NAME}

${OBJ_DIR}/%.o: %.c ${INCLUDES}
	@mkdir -p ${OBJ_DIR}
	${CC} ${FLAGS} -c $< -o $@

#################################################################################################################
#                                           RULES CLEAN                                                         #
#################################################################################################################
clean:
	rm -rf ${OBJ_DIR}/ ${OBJS}

fclean: clean
	rm -rf ${NAME} ${BONUS_NAME}

re: fclean all
#################################################################################################################
#                                           NO RELINK                                                           #
#################################################################################################################

.PHONY: all clean fclean re

#################################################################################################################
#                                           BONUS	                                                            #
#################################################################################################################
BONUS_NAME =

OBJS_BONUS = ${addprefix ${OBJ_DIR_BONUS}/,${SRCS_BONUS:.c=.o}}
OBJ_DIR_BONUS = objets_bonus

${OBJ_DIR_BONUS}/%.o: %.c ${INCLUDES}
	@mkdir -p ${OBJ_DIR_BONUS}
	${CC} ${FLAGS} -c $< -o $@

${BONUS_NAME}: ${OBJS_BONUS}
	${CC} ${FLAGS} ${OBJS_BONUS} ${LIB} ${EXTRA} -I ${INCLUDES} -o ${BONUS_NAME}

bonus: ${MINILIBX_A} ${LIBFT_A} ${BONUS_NAME}